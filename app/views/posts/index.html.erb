<h1>Posts</h1>

<table class="table">
  <thead>
    <tr>
      <th>
        Title
      </th>
      <th>
        Author
      </th>
      <th>
        Details
      </th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <%= post.title %>
        </td>
        <td>
          <%= post.author.first_name %> <%= post.author.last_name %>
        </td>
        <td>
          <%= link_to "View Details", post_path(id: post.id) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
